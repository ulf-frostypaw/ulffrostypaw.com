---
const { redirect, color, text } = Astro.props;
import RightArrowIcon from "./icons/RightArrowIcon.astro";
---

<a href={redirect} class={`btn ${color}`}>
    {text}
    <RightArrowIcon />
</a>
<style>
    .btn {
        display: inline-block;
        padding: 15px 30px;
        margin: 10px;
        font-size: 20px;
        font-weight: bold;
        color: white;
        border-radius: 30px;
        border: none;
        cursor: pointer;
        text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
        box-shadow: inset 2px 2px 5px rgba(255, 255, 255, 0.5),
                    inset -2px -2px 5px rgba(0, 0, 0, 0.2),
                    3px 3px 5px rgba(0, 0, 0, 0.3);
    }

    .btn:active {
        box-shadow: inset 3px 3px 5px rgba(0, 0, 0, 0.3);
    }

    .green { background: #3DAE4A; }
    .purple { background: #9B59B6; }
    .blue { background: #3498DB; }
    .yellow { background: #F1C40F; }
    .dark-green { background: #58D68D; }
    .pink { background: #E74C3C; }
    .orange { background: #E67E22; }
    .dark-purple { background: #8E44AD; }
    .brown { background: #A67C52; }
    .dark-blue { background: #2E86C1; }
    </style>
</style>